generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model User {
    id            String    @id @unique @db.Uuid @map("supabase_id")
    name          String
    email         String    @unique
    image         String?
    gender        Gender?
    refreshToken  String    @map("refresh_token")
    createdAt     DateTime  @default(now()) @map("created_at")
    updatedAt     DateTime  @updatedAt @default(now()) @map("updated_at")
    isDeleted     Boolean?  @default(false) @map("is_deleted")
    provider      Provider
    avatarUrl     String?   @map("avatar_url")
    walletBalance Int       @map("wallet_balance") @default(100000)
    role          Role      @default(user)
    
    @@map("users")
}

enum Role {
  user
  bot
}

enum Gender {
  male
  female
  other
}

enum Provider {
  system
  google
}

model Order {
  id              String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  userId          String @map("user_id")
  symbol          String
  side            Side 
  type            OrderType
  price           Int?
  originalQuantity Int  @map("original_quantity")
  remainingQuantity Int @map("remaining_quantity")
  status          OrderStatus @default(open)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @default(now()) @map("updated_at")

  @@map("orders")
  @@index([symbol])
  @@index([side, type])
}

enum Side {
  buy
  sell
}

enum OrderType {
  limit
  market
}

enum OrderStatus {
  open
  partial
  filled
  cancelled
}

model Trade {
  id           String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  symbol       Symbols
  buyOrderId   String   @map("buy_order_id") @db.Uuid
  sellOrderId  String   @map("sell_order_id") @db.Uuid
  price        Int
  quantity     Int
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @default(now()) @map("updated_at")

  @@map("trades")
  @@index([symbol])
  @@index([buyOrderId])
  @@index([sellOrderId])
}

model Symbol {
  id           String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  symbol       Symbols   @unique
  lastTradePrice Int    @map("last_trade_price")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @default(now()) @map("updated_at")

  holdings     Holdings[]
  @@map("symbols")
}

enum Symbols {
  SAMA
  MUKS
  HKRT
  PAAJI
}

model Holdings {
  id           String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  userId       String   @db.Uuid @map("user_id")
  symbolId     String   @db.Uuid @map("symbol_id")
  quantity     Int 
  avgPrice     Int      @map("avg_price")

  symbol      Symbol    @relation(fields: [symbolId], references: [id])

  @@map("holdings")
  @@unique([userId, symbolId])
}

// CEO Coin Suggestions Feature
model CoinSuggestion {
  id          String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  coinName    String   @unique @map("coin_name")
  ceoName     String   @unique @map("ceo_name")
  userId      String   @db.Uuid @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  
  votes       CoinVote[]

  @@map("coin_suggestions")
}

model CoinVote {
  id           String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  suggestionId String   @db.Uuid @map("suggestion_id")
  userId       String   @db.Uuid @map("user_id")
  voteType     VoteType @map("vote_type")
  createdAt    DateTime @default(now()) @map("created_at")
  
  suggestion   CoinSuggestion @relation(fields: [suggestionId], references: [id], onDelete: Cascade)

  @@unique([suggestionId, userId])
  @@map("coin_votes")
}

enum VoteType {
  UP
  DOWN
}